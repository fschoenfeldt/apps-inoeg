{
  "name": "@kiebitz-oss/app-mediator",
  "description": "Kiebitz Mediator Web Applications",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "contributors": [
    "Benjamin Bender <bb@codepoet.de>",
    "Andreas Dewes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiebitz-oss/apps-inoeg",
    "directory": "apps/mediator"
  },
  "bugs": "https://github.com/kiebitz-oss/apps-inoeg/issues",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "postinstall": "pnpm i18n:build",
    "dev": "next dev",
    "build": "next build && next export --outdir dist",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "i18n": "lingui",
    "i18n:extract": "NODE_ENV=development lingui extract --clean ",
    "i18n:compile": "lingui compile",
    "i18n:build": "NODE_ENV=development lingui extract --clean && lingui compile"
  },
  "dependencies": {
    "@carbon/icons-react": "^10.44.0",
    "@fontsource/ibm-plex-sans": "^4.5.1",
    "@headlessui/react": "^1.4.2",
    "@kiebitz-oss/api": "workspace:*",
    "@kiebitz-oss/config": "workspace:*",
    "@kiebitz-oss/ui": "workspace:*",
    "@lingui/react": "^3.13.0",
    "@storybook/react": "^6.4.9",
    "clsx": "^1.1.1",
    "make-plural": "^7.0.0",
    "next": "^12.0.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.22.2",
    "react-use": "^17.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@lingui/cli": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.37",
    "autoprefixer": "^10.4.1",
    "babel-plugin-macros": "^3.1.0",
    "postcss": "^8.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.0.2",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "lingui": {
    "locales": [
      "de",
      "en"
    ],
    "sourceLocale": "de",
    "format": "po",
    "catalogs": [
      {
        "path": "<rootDir>/locales/{locale}/messages",
        "include": [
          "<rootDir>"
        ],
        "exclude": [
          "**/node_modules/**"
        ]
      }
    ],
    "rootDir": "src"
  }
}
